{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "ES2020",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "strict": true,
        "esModuleInterop": true,
        "paths": {
            "@command/*" : ["./src/command/*"],
            "@types/*"   : ["../../src/@types/*"],
            "@util/*"    : ["./src/util/*"]
        },
        "declaration": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}